<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8EC5F4"
    tools:context=".screens.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="315dp"
        android:gravity="center"
        android:text="Eat \n &amp; \n Share"
        android:textSize="70dp"
        app:layout_constraintBottom_toTopOf="@+id/Odot1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLogin1"
        android:layout_width="123dp"
        android:layout_height="45dp"
        android:layout_marginStart="77dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#7EAEF6"
        android:onClick=""
        android:text="התחברות"
        app:layout_constraintBottom_toTopOf="@+id/Odot1"
        app:layout_constraintEnd_toStartOf="@+id/btnreg1"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/btnreg1"
        android:layout_width="108dp"
        android:layout_height="43dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#7EAEF6"
        android:text="הרשמה"
        app:layout_constraintBottom_toTopOf="@+id/Odot1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnLogin1"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/Odot1"
        android:layout_width="108dp"
        android:layout_height="43dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#7EAEF6"
        android:text="אודות"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnreg1"
        app:layout_constraintStart_toStartOf="@+id/btnLogin1"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="348dp"
        android:layout_height="184dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="79dp"
        app:layout_constraintBottom_toTopOf="@+id/btnreg1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/pic11" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="126dp"
        android:layout_height="0dp"
        android:layout_marginStart="114dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="215dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pic22" />

</androidx.constraintlayout.widget.ConstraintLayout>