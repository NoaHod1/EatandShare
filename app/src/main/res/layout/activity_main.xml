<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8EC5F4"
    tools:context=".screens.MainActivity">

    <Button
        android:id="@+id/btnLogin1"
        android:layout_width="125dp"
        android:layout_height="62dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#7EAEF6"
        android:onClick=""
        android:text="התחברות"
        app:layout_constraintBottom_toTopOf="@+id/Odot1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnreg1"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/btnreg1"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="65dp"
        android:backgroundTint="#7EAEF6"
        android:text="הרשמה"
        app:layout_constraintBottom_toBottomOf="@+id/Odot1"
        app:layout_constraintEnd_toStartOf="@+id/btnLogin1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Odot1"
        android:layout_width="118dp"
        android:layout_height="59dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#7EAEF6"
        android:text="אודות"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnLogin1"
        app:layout_constraintStart_toStartOf="@+id/btnLogin1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="114dp"
        android:layout_height="106dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pic22" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="374dp"
        android:layout_height="661dp"
        app:srcCompat="@drawable/logo22"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>